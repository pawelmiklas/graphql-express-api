{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "module": "NodeNext",
    "strict": true,
    "outDir": "./build",
    "baseUrl": ".",
    "paths": {
      "@generated/*": ["src/generated/*"],
      "@lib/*": ["src/lib/*"],
      "@schema/*": ["src/schema/*"],
      "@utils/*": ["src/utils/*"],
      "@graphql/*": ["src/graphql/*"]
    }
  }
}
